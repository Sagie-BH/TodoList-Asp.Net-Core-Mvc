@model DAL.Dtos.TodoSearchDto;

@{
    List<string> propertyList = new List<string>();
}


@foreach (System.Reflection.PropertyInfo prop in typeof(DAL.Dtos.TodoObjectCreateDto).GetProperties())
{
    if (prop.Name != "Id")
    {
        propertyList.Add(prop.Name);
    }
}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Search</h4></div>
    <div class="panel-body">
        <form class="row justify-content-center " asp-action="Search" data-ajax="true" data-ajax-success="searchTable" data-ajax-method="POST">
            <select asp-for="Property" asp-items="@new SelectList(propertyList)" class="selectpicker form-control col-3">
                <option disabled>Choose Property</option>
            </select>
            <input asp-for="SearchTerm" id="search-input" type="search" class="form-control offset-1 col-4" />
            <input id="search-btn" type="submit" value="Search" class="btn btn-primary col-2 offset-2" />
        </form>

    </div>
</div>
<br />



