@using DAL.ViewModels;
@using DAL.Repositories;
@using DAL.Models;

@inject ISqlRepository<TodoObjectModel> Repository;
@inject AutoMapper.IMapper mapper;

@model TodoViewModel;


<table id="todoTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="todoTableBody">

        @{
            var TodoViewModelList = mapper.Map<IEnumerable<TodoViewModel>>(Repository.GetAll());
        }
        @if (TodoViewModelList != null)
        {

            foreach (var item in TodoViewModelList)
            {
                <tr id=row@(item.Id)>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-route-id="@item.Id" onClientClick="deleteTodoObj();" onclick="return deleteTodoObj(@item.Id);">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
